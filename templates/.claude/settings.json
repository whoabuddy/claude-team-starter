{
  "$schema": "https://claude.ai/schemas/claude-code-settings.json",
  "preferences": {
    "autoUpdaterStatus": "disabled"
  },
  "permissions": {
    "allow": [
      "Bash(~/verify.sh)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(npm:*)",
      "Bash(node:*)",
      "Bash(clarinet:*)",
      "Read(**)",
      "Glob(**)",
      "Grep(**)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(~/.ssh/**)"
    ]
  }
}
